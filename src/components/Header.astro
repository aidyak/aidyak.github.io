---
interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<header class="header">
  <div class="header-container">
    <div class="header-left">
      <a href="/" class="portfolio-link">
        <span class="portfolio-name" style="margin-right: 24px;">{title}</span>
      </a>
      <a href="/about" class="portfolio-link">
        <span class="portfolio-description">{description}</span>
      </a>
    </div>
    <div class="header-right">
      <a
        href="https://github.com/aidyak"
        target="_blank"
        rel="noopener noreferrer"
        class="github-link"
        aria-label="GitHub"
      >
        <svg class="github-icon" viewBox="0 0 24 24" fill="currentColor">
          <path
            d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
          ></path>
        </svg>
      </a>

      <button id="theme-toggle" class="theme-toggle" aria-label="切り替え">
        <svg class="sun-icon" viewBox="0 0 24 24" fill="currentColor">
          <path
            d="M12 17.27L18.18 21 16.54 13.97 22 9.24 14.81 8.63 12 2 9.19 8.63 2 9.24 7.46 13.97 5.82 21 12 17.27z"
          ></path>
        </svg>
        <svg class="moon-icon" viewBox="0 0 24 24" fill="currentColor">
          <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
        </svg>
      </button>
    </div>
  </div>
</header>

<script>
  const themeToggle = document.getElementById("theme-toggle");
  const html = document.documentElement;

  const savedTheme = localStorage.getItem("theme");
  html.setAttribute("data-theme", savedTheme || "dark");

  themeToggle?.addEventListener("click", () => {
    const currentTheme = html.getAttribute("data-theme");
    const newTheme = currentTheme === "dark" ? "light" : "dark";
    html.setAttribute("data-theme", newTheme);
    localStorage.setItem("theme", newTheme);
  });
</script>

<style>
  .header {
    position: sticky;
    top: 0;
    z-index: 100;
    background: rgba(19, 21, 26, 0.95);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    transition: all 0.3s ease;
  }

  .header-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 1rem 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  /* 左寄せ: ポートフォリオ名 */
  .header-left {
    display: flex;
    align-items: center;
  }

  .portfolio-title {
    text-decoration: none;
    color: inherit;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
  }

  .portfolio-name,
  .portfolio-description {
    font-size: 1.5rem;
    font-weight: 700;
    color: #ffa500;
  }

  .portfolio-subtitle {
    font-size: 0.75rem;
    color: rgba(255, 255, 255, 0.6);
    font-weight: 400;
    margin-top: -0.25rem;
  }

  /* 右寄せ: GitHubリンクとテーマ切り替え */
  .header-right {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .github-link {
    display: flex;
    align-items: center;
    color: rgba(255, 255, 255, 0.8);
    transition: color 0.3s ease;
  }

  .github-link:hover {
    color: rgb(255, 165, 0);
  }

  .github-icon {
    width: 1.5rem;
    height: 1.5rem;
  }

  .theme-toggle {
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
    border-radius: 0.5rem;
    color: rgba(255, 255, 255, 0.8);
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .theme-toggle:hover {
    background: rgba(255, 255, 255, 0.1);
    color: rgb(255, 165, 0);
  }

  .theme-toggle svg {
    width: 1.25rem;
    height: 1.25rem;
  }

  /* テーマ切り替えアイコンの表示/非表示 */
  .sun-icon {
    display: none;
  }

  .moon-icon {
    display: block;
  }

  [data-theme="light"] .sun-icon {
    display: block;
  }

  [data-theme="light"] .moon-icon {
    display: none;
  }

  /* ライトテーマのスタイル */
  [data-theme="light"] {
    --bg-color: #ffffff;
    --text-color: #1a1a1a;
    --border-color: rgba(0, 0, 0, 0.1);
  }

  [data-theme="light"] .header {
    background: rgba(255, 255, 255, 0.95);
    border-bottom: 1px solid var(--border-color);
  }

  [data-theme="light"] .portfolio-subtitle {
    color: rgba(0, 0, 0, 0.6);
  }

  [data-theme="light"] .github-link,
  [data-theme="light"] .theme-toggle {
    color: rgba(0, 0, 0, 0.8);
  }

  [data-theme="light"] .theme-toggle:hover {
    background: rgba(0, 0, 0, 0.1);
  }

  /* レスポンシブデザイン */
  @media (max-width: 768px) {
    .header-container {
      padding: 1rem;
    }

    .portfolio-name {
      font-size: 1.25rem;
    }

    .portfolio-subtitle {
      font-size: 0.7rem;
    }

    .header-right {
      gap: 0.75rem;
    }

    .github-icon,
    .theme-toggle svg {
      width: 1.25rem;
      height: 1.25rem;
    }
  }
</style>
